{
   "AWSEBDockerrunVersion": 2,
   "containerDefinitions": [
       {
           "name": "client",
           "image": "just4docker/multi-client",
           "hostname": "client",
           "essential": false
       },
       {
           "name": "server",
           "image": "just4docker/multi-server",
           "hostname": "api",
           "essential": false
       },
       {
           "name": "worker",
           "image": "just4docker/multi-worker",
           "hostname": "worker",
           "essential": false
       },
       {
           "name": "nginx",
           "image": "just4docker/multi-nginx",
           "hostname": "nginx",
           "essential": true,
           "portMappings": [
               {
                   "hostPort": 80,
                   "containerPort": 80
               }
           ],
           "links": ["client", "server"]

       }
      
   ] 
}